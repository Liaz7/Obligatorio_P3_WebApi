@using Dominio.Dto
@model Dominio.Dto.UsuarioDto

@{
    ViewData["Title"] = "Login";
}



@if (Context.Session.GetString("user") != null)
{
    <div class="alert alert-danger" role="alert">
        Accesso Denegado!
    </div>
}else
{
<div class="card" style="width: 20rem; margin: 70px auto;">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }


    @if (Context.Session.GetString("user") == null)
    {
        <div class="card-header">
            <h3>Login</h3>
        </div>

        <div class="card-body">
            <form action="~/Usuario/Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UsuarioAlias">Alias</label>
                    <input asp-for="UsuarioAlias" class="form-control" />
                    <div class="text-danger" id="errorUsuario"></div>
                </div>
                <div class="form-group">
                    <label asp-for="UsuarioContrasenia">Password</label>
                    <input asp-for="UsuarioContrasenia" type="password" class="form-control" />
                    <div class="text-danger" id="errorPass"></div>
                </div>
                <br />
                <input type="submit" value="EnviarLogin" class="btn btn-secondary" />
            </form>

        </div>
    } else {
    <div class="alert alert-danger">Acceso denegado</div>
    }


</div>
}