@using Dominio.Dto
@model Dominio.Dto.UsuarioDto

@{
    ViewData["Title"] = "Registro";
}

@if (Context.Session.GetString("user") != null && Context.Session.GetString("user") != "admin1")
{
    <div class="alert alert-danger" role="alert">
        Accesso Denegado!
    </div>
}
else
{
<div class="card" style="width: 20rem; margin: 70px auto;">
    <div class="card-header">
        <h3>Registro</h3>
    </div>



    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    @if (ViewBag.Exito != null)
    {
        <div class="alert alert-success">@ViewBag.Exito</div>
    }

    <div class="card-body">
        <form action="~/Usuario/RegistrarUsuario" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioAlias">Alias</label>
                <input asp-for="UsuarioAlias" class="form-control" />
                <div class="text-danger" id="errorUsuario"></div>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioContrasenia">Password</label>
                <input asp-for="UsuarioContrasenia" type="password" class="form-control" />
                <div class="text-danger" id="errorPass"></div>
            </div>
            <br />
            <input type="submit" value="EnviarLogin" class="btn btn-secondary" />
        </form>

    </div>
</div>

}